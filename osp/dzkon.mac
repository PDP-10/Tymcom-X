P.IBMO:	LDB T2,[POINT 8,ORING(T4),BYP2]	;Destination port number
	LDB T3,LCTYP
	CAIN T3,LT.AUX
	 JSR SYSCRS
	MOVEI T1,5
	CAMLE T1,LINCOU(T2)
	 JRST ORDONE
;code to put request into output ring
	JRST PROOR1
P.RBOT:	
P.NBIP:	LDB T2,[POINT 8,ORING(T4),BYP2]	;Destination port number
	LDB T3,LCTYP
	CAIE T3,LT.AUX
	 JRST PNBIP1
