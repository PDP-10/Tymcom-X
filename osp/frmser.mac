FRMGTP:	MOVEI	T4,SRPNDS	;IF DSKCLN HASN'T RUN YET
	TDNE	T4,STRDDB+STRBTS
	JRST	[MOVE T2,ADRDUM
		 POPJ P,]	;JUST GIVE DUMMY DISK ADDRESS AD RETURN
