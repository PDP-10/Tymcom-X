I1CHRW:	AOS (P)		;FROM AUXCAL
INCHRW:	NOCHARGE
INRW1:	PUSHJ P,TWAITC			;WAIT FOR A CHARACTER TO APPEAR
	PUSHJ P,TYI			;GO GET THE CHARACTER
	  JRST INRW1			;IMPOSSIBLE. NONE THERE
