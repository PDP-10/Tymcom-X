	TRNN S,10		;IF MODES 10,13,14
	TRNN S,2		;OR 0,1
	TRZA T3,600		;SAME AS ANDI 177 SINCE TTGETC GETS 9 BIT BYTE
	ANDI T3,377		;8 BITS IN MODE 2
